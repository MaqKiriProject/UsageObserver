<Window x:Class="MaqKiriAppTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaqKiriAppTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="256" Width="256"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" Topmost="False"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseUp="Window_MouseUp">
    <Grid>
        <Image HorizontalAlignment="Left" Height="256" Margin="0,0,0,0"
               VerticalAlignment="Top" Width="256" Source="kurumi icon.png"/>

        <TextBox x:Name="usageBox" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="NONE" VerticalAlignment="Top" Width="49" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" Margin="118,164,0,0" FontWeight="Bold" FontFamily="Consolas" FontStyle="Italic"/>

    </Grid>
</Window>
